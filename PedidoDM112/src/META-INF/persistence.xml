<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">
	<persistence-unit name="pagamentoPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
   		
		<properties>
    		<property name="hibernate.show_sql" value="true"/>
    		<property name="hibernate.format_sql" value="true"/>
    		<property name="hibernate.dialect" value="util.SQLiteDialect"/>

    		<property name="hibernate.connection.driver_class" value="org.sqlite.JDBC"/>
    		<property name="hibernate.connection.url" value="jdbc:sqlite:/home/aluno/pagamento.sqlite"/>
    		
    	</properties>
    </persistence-unit>
</persistence>